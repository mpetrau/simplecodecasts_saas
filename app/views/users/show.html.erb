<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url, class:"avatar" %>
    </div>
    
    <div class="col-md-6">
        <div class="well">
            <h1><%= @user.profile.first_name %>
            <%= @user.profile.last_name %> </h1>
            <h3> <span class="job-title-icon"><%= job_title_icon %></span>
            <%= @user.profile.job_title %> </h3>
            <div class="well profile-block profile-description">
                <h3> My BIO: </h3>
                <%= @user.profile.description %> </br>
            </div>
            
            <div class="well profile-block contact-info">
                <h3> My contact details: </h3>
                <% if current_user.plan_id == 2 %>
                    <%= @user.profile.phone_number %> </br>
                    <%= @user.profile.contact_email %> </br>
                <% else %>
                    <h5>Upgrade your profile to see Phone and Email</h5>
                <% end %>
            </div>
        </div>
    </div>
</div>

